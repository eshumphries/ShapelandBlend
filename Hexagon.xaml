<UserControl x:Class="Shapeland.Hexagon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shapeland"
             mc:Ignorable="d"
             Width="90" Height="90">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Canvas Width="90" Height="90" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ClipToBounds="False">
            <Polygon Stroke="Black" StrokeThickness="1" Points="50,0 100,25 100,75 50,100 0,75 0,25" RenderTransformOrigin="0.5,0.5">
                <Polygon.RenderTransform>
                    <ScaleTransform x:Name="UserControlScale"/>
                </Polygon.RenderTransform>
            </Polygon>
        </Canvas>
    </Grid>
</UserControl>
